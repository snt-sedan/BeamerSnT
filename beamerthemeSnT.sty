\mode<presentation>

\useinnertheme{SnT}
\useoutertheme{SnT}
\usecolortheme{SnT}
\usefonttheme{SnT}

\setbeamercolor{section in toc}{fg=sntblue}
\setbeamercolor{subsection in toc}{fg=sntblue}
\setbeamertemplate{section in toc}[square unnumbered]
\setbeamertemplate{subsection in toc}[square unnumbered]

\setbeamercolor{caption name}{fg=black}
\setbeamertemplate{caption}[numbered]

\setbeamertemplate{itemize item}[triangle]
\setbeamercolor*{item}{fg=sntpurple}
\setbeamercolor*{subitem}{fg=sntred}

\mode<all>
